{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zstar",
  "version": "0.1.0",
  "identifier": "com.zstar.gui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../gui/build"
  },
  "app": {
    "windows": [
      {
        "title": "zstar",
        "width": 720,
        "height": 580,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "center": true,
        "decorations": false,
        "transparent": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
